<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="goods-Mapper">
  
  	<!-- Goods  -->
  	<resultMap type="goods" id="GoodsResultSet">
	  	<result column="G_NO" property="gNo"/>
	   	<result column="C_NO" property="cNo"/>
	   	<result column="G_NAME" property="gName"/>
	   	<result column="G_CATEGORY" property="category"/>
	   	<result column="G_STOCK" property="stock"/>
	   	<result column="G_PRICE" property="price"/>
	   	<result column="G_CONTENT" property="content"/>
	   	<result column="G_ORIGIN_NAME1" property="originName1"/>
	   	<result column="G_CHANGE_NAME1" property="changeName1"/>
	   	<result column="G_ORIGIN_NAME2" property="originName2"/>
	   	<result column="G_CHANGE_NAME2" property="changeName2"/>
	   	<result column="G_ORIGIN_NAME3" property="originName3"/>
	   	<result column="G_CHANGE_NAME3" property="changeName3"/>
	   	<result column="G_ORIGIN_NAME4" property="originName4"/>
	   	<result column="G_CHANGE_NAME4" property="changeName4"/>
	   	<result column="G_FILE_PATH" property="filePath"/>
	   	<result column="G_ENROLL_DATE" property="enrollDate"/>
	    <result column="G_STATUS" property="status"/>
  	</resultMap>
  	
  	
  	<!-- 리스트 조회 -->
	<select id="selectList" resultMap="GoodsResultSet">
		SELECT G_NO
			   ,G_NAME
			   ,G_CATEGORY
			   ,G_STOCK
			   ,G_PRICE
			   ,G_CONTENT
			   ,G_ORIGIN_NAME1
			   ,G_FILE_PATH
			   ,G_STATUS
		FROM TB_GOODS
		WHERE G_STATUS='Y'
		ORDER BY G_NO DESC
	</select>
  	
  
  </mapper>